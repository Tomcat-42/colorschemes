*.default=true

# present in 'Send this email?' dialog
# Changed from green to red for high prominence
title.fg=#{{base08-hex}}
title.bg=#{{base01-hex}}
title.bold=true

# used in setup and in 'From:' etc
# Changed from blue to red to make headers stand out
header.bold=true
header.fg=#{{base08-hex}}

# decorative lines
border.fg=#{{base04-hex}}

# requires attention
*error.bold=true
*error.fg=#{{base08-hex}}
*error.blink=true
*warning.fg=#{{base09-hex}}
*warning.blink=true
*success.fg=#{{base0B-hex}}

# statusline
statusline_default.fg=#{{base05-hex}}
statusline_*.bg=#{{base01-hex}}

# message list colors
msglist_deleted.fg=#{{base03-hex}}
# Changed from magenta to green
msglist_unread.fg=#{{base0B-hex}}
msglist_unread.bold=true
msglist_default.fg=#{{base06-hex}}
msglist_marked.fg=#{{base0A-hex}}
msglist_marked.reverse=true
# Changed from orange to red for importance
msglist_flagged.fg=#{{base08-hex}}
msglist_flagged.bold=true

# inbox etc
dirlist_default.fg=#{{base06-hex}}
# Changed from magenta to green
dirlist_unread.fg=#{{base0B-hex}}
dirlist_unread.bold=true

# highlight selected item
# Changed from cyan to red to make the selection prominent
*.selected.bg=#{{base02-hex}}
*.selected.fg=#{{base08-hex}}
*.selected.bold=true

# primarily used in account setup
selector_default.fg=#{{base05-hex}}
selector_chooser.bold=true
selector_focused.bg=#{{base0A-hex}}
selector_focused.bold=true

# command completion
completion_default.bg=#{{base01-hex}}
completion_gutter.bg=#{{base01-hex}}
completion_pill.bg=#{{base0D-hex}}

#dynamic
*msglist_answered.fg = #{{base0B-hex}}

